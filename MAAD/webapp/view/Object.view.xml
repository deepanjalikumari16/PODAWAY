<mvc:View controllerName="com.coil.podium.MAAD.controller.Object" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified">
	<Page showHeader="false" showFooter="true"  busy="false" busyIndicatorDelay="0" class="sapUiResponsiveContentPadding">
		<form:Form editable="true" binding="{objectView>/oDetails}" >
			<form:title>
				<core:Title text="{= ${objectView>/sMode} === 'C' ? ${i18n>TtlAddUser} : ${i18n>TtlEditUser}  }"/>
			</form:title>
			<form:layout>
				<form:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
					emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</form:layout>
			<form:formContainers>
				<form:FormContainer title="">
					<form:formElements>
						<form:FormElement label="{i18n>colRoleId}">
							<form:fields>
								<ComboBox selectedKey="{objectView>RoleId}" items="{ path: '/MasterRoleSet' }" required="true">
									<core:Item key="{Id}" text="{Role}"/>
								</ComboBox>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colFirstName}">
							<form:fields>
								<Input value="{objectView>FirstName}" required="true" change="onValidMandateFirstName" maxLength="30"/>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colLastName}">
							<form:fields>
								<Input value="{objectView>LastName}" required="true" maxLength="30"/>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colEmail}">
							<form:fields>
								<Input id="emailInput" value="{objectView>Email}" required="true" change="onEmailValidate" maxLength="100"/>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colCountry}">
							<form:fields>
								<ComboBox selectedKey="{objectView>Country}" items="{ path: '/MasterCountrySet' }" change="onCountryChange">
									<!--setSizeLimit=230-->
									<core:Item key="{Country}" text="{Country}" />
								</ComboBox>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colDialCode}">
							<form:fields>
								<Input value="{objectView>DialCode}" editable="false"/>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="{i18n>colMobile}">
							<form:fields>
								<Input id="mobileInput" value="{objectView>Mobile}" type="Tel" change="onMobileValidate"/>
								 <!--maxLength="10"-->
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="{i18n>btnCancel}"  press="onCancel" />
				<Button text="{i18n>btnSave}"  type="Emphasized" press="onSave" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>