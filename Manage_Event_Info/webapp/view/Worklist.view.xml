<mvc:View controllerName="com.coil.podium.Manage_Event_Info.controller.Worklist" xmlns="sap.m" xmlns:c="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic" xmlns:l="sap.ui.layout" xmlns:footerbar="sap.ushell.ui.footerbar"
	xmlns:fb="sap.ui.comp.filterbar">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" class="mng-event-info">
		<semantic:titleHeading>
