		<!--		</layoutData>-->
		<!--	</SearchField>-->
		<!--</l:VerticalLayout>-->
			<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" basicSearch="sfld" showGoOnFB="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem visibleInFilterBar="true" groupName="A" name="Country/Id" groupTitle="Filters"
						label="{i18n>colCountry}">
						<fb:control>
							<ComboBox items="{ path: '/MasterCountrySet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
								<c:Item key="{Id}" text="{Country}"/>
							</ComboBox>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</semantic:titleHeading>
