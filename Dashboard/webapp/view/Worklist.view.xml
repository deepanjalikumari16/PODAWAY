		<l:BlockLayout background="Dashboard" class="podium-dashboard">
			<l:BlockLayoutRow scrollable="true" class="podium-dashboard_grid">
					<l:BlockLayoutCell class="podium-dashboard_item" titleLevel="H4" width="30%" title="{i18n>TtlPODCategory}" >
						<FlexBox class="chartScroll" alignItems="End" height="auto"	justifyContent="Start">
							<items> 
								<VBox class="sapUiTinyMarginEnd" >
									<Text class="large-font" text="{dashboard>/iTotalPOD}"/>
									<Label text="{i18n>TxtTotalPODUsers}"/>
								</VBox>
								<micro:ColumnMicroChart  width="100%" size="L" columns="{dashboard>/PODByCatrgory}" allowColumnLabels="true">
									<micro:columns>
										<micro:ColumnMicroChartData value="{dashboard>Total}" label="{dashboard>Name}"/>
									</micro:columns>
								</micro:ColumnMicroChart>
							</items>
						</FlexBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell class="podium-dashboard_item" titleLevel="H5" width="20%" title="{i18n>TtlEmergencyIncidents}" >
							<FlexBox alignItems="Center" height="90%"
								justifyContent="Start">
								<items>
										<FlexBox direction="Column"		alignItems="Start">
										<ObjectStatus class="large-font" text="{dashboard>/EmergecnyIncidents}" press="Navigate" icon="sap-icon://alert" state="Error"/>
										<Link text="{i18n>NeedImmidiateattention}" press="Navigate"  />
										</FlexBox>
								</items>
						</FlexBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell class="podium-dashboard_item" titleLevel="H6" width="20%" title="{i18n>TtlTotalIncidents}" >
						<FlexBox alignItems="Center" height="90%"
							justifyContent="Start">
							<items>
								<ObjectStatus class="large-font incident-text" text="{dashboard>/TotalIncidents}"/>
							</items>
						</FlexBox>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell class="podium-dashboard_item" width="30%" title="{i18n>TtlAssignmentStatus}" >
						<FlexBox alignItems="Start">
						<FlexBox alignContent="SpaceBetween" direction="Column">
							<Text text="{i18n>TxtPending}"/>
							<Text class="sapUiSmallMarginTop" text="{i18n>TxtInprogress}"/>
							<Text class="sapUiSmallMarginTop" text="{i18n>TxtCompleted}"/>
							<Text class="sapUiSmallMarginTop" text="{i18n>TxtCancelled}"/>
							<layoutData>
								<FlexItemData growFactor="0.2"/>
							</layoutData>
						</FlexBox>
						<FlexBox direction="Column">
							<layoutData>
								<FlexItemData growFactor="2.1"/>
							</layoutData>
							<ProgressIndicator displayValue="{dashboard>/AssignmentStatues/pending}"
								percentValue="{parts : [ {path : 'dashboard>/AssignmentStatues/pending' }, { path : 'dashboard>/TotalAssignments' } ], formatter : '.formatter.givePercentValue'}"
								state="Error"/>
							<ProgressIndicator displayValue="{dashboard>/AssignmentStatues/inprogress}"
								percentValue="{parts : [ {path : 'dashboard>/AssignmentStatues/inprogress' }, { path : 'dashboard>/TotalAssignments' } ], formatter : '.formatter.givePercentValue'}"
								state="Warning"/>
							<ProgressIndicator displayValue="{dashboard>/AssignmentStatues/inprogress}"
								percentValue="{parts : [ {path : 'dashboard>/AssignmentStatues/inprogress' }, { path : 'dashboard>/TotalAssignments' } ], formatter : '.formatter.givePercentValue'}"
								state="Success"/>
							<ProgressIndicator displayValue="{dashboard>/AssignmentStatues/cancelled}"
								percentValue="{parts : [ {path : 'dashboard>/AssignmentStatues/cancelled' }, { path : 'dashboard>/TotalAssignments' } ], formatter : '.formatter.givePercentValue'}"
								state=""/>
						</FlexBox>
					</FlexBox>
					</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow class="podium-dashboard_graph">
				<l:BlockLayoutCell>
					<VBox>
						<HBox class="sapUiResponsiveMargin cust-legend-grid">
							<HBox class="cust-legend1">
								<Text class="total-incident" text="Total Incidents"/>
								<Text class="pod-users" text="of POD users"/>
							</HBox>
							<HBox class="cust-legend">
								<core:Icon class="sapUiLargeMarginBegin sapUiTinyMarginEnd" src="sap-icon://color-fill" color="green"/>
								<Text class="pod-users" text="Density of POD Users"/>
							</HBox>
							<HBox class="cust-legend">
								<core:Icon class="sapUiTinyMarginBeginEnd" src="sap-icon://color-fill" color="red"/>
								<Text class="pod-users" text="Emergency Incidents"/>
							</HBox>
						</HBox>
						<html:div id="map" class="MapContainer"></html:div>
					</VBox>
				</l:BlockLayoutCell>	
