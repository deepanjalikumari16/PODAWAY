<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"	xmlns:unified="sap.ui.unified" xmlns:imgEditor="sap.suite.ui.commons.imageeditor">
	<Dialog id="dlgAddOptn" stretch="true" busy="{worklistView>/bBusyDialog}" busyIndicatorDelay="0" contentWidth="auto" contentHeight="auto" class="sapUiResponsiveContentPadding" binding="{worklistView>/oAddOption}"
		title="{=  ${worklistView>/sDialogMode} === 'C' ?   (${i18n>TtlAddOption}).concat(' ',${worklistView>/appType}) :  (${i18n>TtlEditOption}).concat(' ',${worklistView>/appType})  }"		>
		<!-- 	title="{=  ${worklistView>/sDialogMode} === 'C' ?  ${i18n>TtlAddOption} : ${i18n>TtlEditOption} }" -->
		<!--			title="{ parts :  [{ path: 'worklistView>/sDialogMode' }, { path : 'worklistView>/appType'  } ]  , formatter : '.formatter.getDialogTitle'  }"
-->
		<f:SimpleForm editable="true" title="{i18n>TtlAddOptnDs}" 	layout="ResponsiveGridLayout" singleContainerFullSize="true" >
			<Label required="true" text="{i18n>LblAccessibilityDeviceTitle}"/>
			<!-- , type: 'sap.ui.model.odata.type.String' , constraints : { nullable : false  } -->
			<Input  value="{ path:  'worklistView>Title' }"/>
			<Label required="true" text="{i18n>LblInformation}"/>
			<Input  value="{ path:  'worklistView>Information' }"/>
			<Label visible="{=  ${worklistView>AccessibilityId} === 2  }" text="{i18n>LblIsTextAllowed}" />
			<CheckBox visible="{=  ${worklistView>AccessibilityId} === 2 }" selected="{worklistView>TextAllowed}"   />
			<Label text="{i18n>LblEnabled}" />	
			<CheckBox selected="{worklistView>IsEnabled}" />
			<Label required="true" text="{i18n>LblAccessibilityDeviceIcon}"/>
		</f:SimpleForm>
		
		<imgEditor:ImageEditorResponsiveContainer  mode="Crop" enabledButtons="Crop,Transform">
			<imgEditor:customToolbarControls>
				<!--  fileType="[ 'jpg' , 'jpeg' , 'png' , 'svg' , 'ico', 'bmp' ]" -->
				<unified:FileUploader id="updAddOptn" fileType="jpg,bmp,png,ico,svg" change="onFileChange"  />
			</imgEditor:customToolbarControls>
			<imgEditor:ImageEditor src="{worklistView>Icon}" loaded="onImageLoaded" />
		</imgEditor:ImageEditorResponsiveContainer>
		<buttons>
			<Button press="onCancelAddOption"  text="{i18n>btnCancel}"/>
			<Button press="onSaveAddOption" text="{i18n>btnSave}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>