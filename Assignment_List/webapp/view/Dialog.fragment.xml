<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id="openDialog" title="Assign Dialog">
		<VBox class="sapUiSmallMargin">
			<f:SimpleForm id="SimpleFormDisplay354" editable="true" layout="ResponsiveGridLayout" title="Change Assignee" labelSpanXL="3" labelSpanL="3"
				labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
				columnsL="1" columnsM="1" singleContainerFullSize="false">
				<f:content>
					<Label text="{i18n>colAssignee}"/>
					<ComboBox selectedKey="{worklistView>/assigneeId}"
						items="{ path: '/UserSet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false }, { path : 'RoleId', operator : 'EQ', value1 : 2 } ] }">
						<core:Item key="{Id}" text="{FirstName} {LastName}"/>
					</ComboBox>
				</f:content>
			</f:SimpleForm>
		</VBox>
		<buttons>
			<Button text="Assign Now" press=".assignNow"/>
			<Button text="Cancel" press=".closeDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>